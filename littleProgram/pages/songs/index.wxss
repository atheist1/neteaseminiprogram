.clearfix:after{
  content:'';
  display: block;
  clear: both;
}
.bg {
  height: 100%;
  filter:blur(20px);


  margin: 0px; 
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: auto 100%;
  -webkit-transform: scale(1.5);
  /* transform: scale(1.5); */
  -webkit-transform-origin: center top;
  transform-origin: center top;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  height: 100%;
  overflow: hidden;
  z-index: -1;
  -webkit-transition: opacity .3s linear;
  transition: opacity .3s linear;
}
.header{
  height: 88rpx;
}
.bgBack {
  content: " ";
  bottom: 0;
  top: 0;
  background-color: rgba(0,0,0,.3);
  position: fixed;
  z-index:-1;
  height: 100%;
  width: 100%;
} 
.playContent {
  height: 900rpx;
  display: flex;
  overflow: hidden;
}
.playContent .lrc{

  width: 100%;
  z-index: 33;
  text-align: center;
  color:#fff;
}
.playContent .song-info .disc{
  width: 100%;
  height: 100%;
  position: relative;
}
.playContent .song-info .turn{

  position:absolute;
  left:0;
  right:0;
  top:80rpx;
  bottom:0;
  z-index:2;
  width:600rpx;
  height:600rpx;
  margin-left:80rpx;
  background-size:contain;

}
.playContent .song-info .turnImg{
    position: absolute;
    z-index: 1;
    top: 193rpx;
    left: 193rpx;
}
.playContent .song-info .turnImg image { 
    width: 384rpx;
    height:384rpx;
}
/*  */
.playContent .song-info .play-btn{
  position: absolute;
  width: 50px;
  height: 50px;
  left: 50%;
  top:50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  z-index: 99;
 
  background:  url(data:image/png;base64,) 0 0 no-repeat;
  background-size: contain;
}
.playContent .song-info .play-btn::after{
  content: "";
  display: block;
  position: absolute;
}
/*模拟点击面板*/
.playContent .cleararea{
  opacity: 0;
  z-index: 5!important;
}
.playContent .lrc .lrc-item{
  font-size: 12px;
  text-align: center;
  min-height: 84rpx;
  margin: 20rpx 0;
}
.playContent .lrc .lrcOn{
  color:red;
}
/*控制面板*/
.audioContent {
  display: flex;
